{
  "name": "bloom-api",
  "version": "1.0.2",
  "description": "Bloom Azure Functions API - A/B Testing with Cosmos DB",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "func start",
    "test": "jest",
    "test:unit": "jest tests/unit --passWithNoTests",
    "test:integration": "jest tests/integration --passWithNoTests",
    "test:ci": "jest --coverage --ci --passWithNoTests",
    "test:security": "node security-audit.js",
    "test:security:strict": "node security-audit.js --strict",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security",
    "verify": "node verify-function-registration.js",
    "build:local": "tsc && npm run verify"
  },
  "dependencies": {
    "@azure/communication-email": "^1.1.0",
    "@azure/communication-identity": "^1.3.0",
    "@azure/communication-rooms": "^1.1.0",
    "@azure/communication-sms": "^1.2.0-beta.4",
    "@azure/cosmos": "^4.7.0",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^4.2.0",
    "@azure/keyvault-keys": "^4.8.0",
    "@azure/storage-blob": "^12.17.0",
    "@azure/storage-queue": "^12.16.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "isomorphic-fetch": "^3.0.0",
    "mssql": "^12.1.1",
    "openai": "^4.52.0",
    "parse-multipart": "^1.0.4",
    "stripe": "^17.7.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@azure/communication-phone-numbers": "^1.5.0",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "azure-functions-core-tools": "^4.0.5455",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.0"
  }
}
