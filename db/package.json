{
  "name": "@bloom/db-migrations",
  "version": "1.0.0",
  "description": "Database migration management for Bloom using Azure SQL native mssql package",
  "private": true,
  "scripts": {
    "migrate": "node scripts/migrate.js migrate",
    "migrate:dev": "cross-env DB_NAME=lpa-bloom-db-dev node scripts/migrate.js migrate",
    "migrate:staging": "cross-env DB_NAME=lpa-bloom-db-staging node scripts/migrate.js migrate",
    "migrate:prod": "cross-env DB_NAME=lpa-bloom-db-prod node scripts/migrate.js migrate",
    "info": "node scripts/migrate.js info",
    "validate": "node scripts/migrate.js validate"
  },
  "dependencies": {
    "mssql": "^11.0.1",
    "dotenv": "^16.4.5",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30"
  }
}
