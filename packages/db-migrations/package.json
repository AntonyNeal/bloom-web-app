{
  "name": "@life-psychology/db-migrations",
  "version": "1.0.0",
  "description": "Database migration management system (Liquibase-style) for Azure SQL and Cosmos DB",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "migrate": "node dist/cli.js migrate",
    "migrate:up": "node dist/cli.js migrate up",
    "migrate:down": "node dist/cli.js migrate down",
    "migrate:status": "node dist/cli.js status",
    "migrate:create": "node dist/cli.js create",
    "migrate:validate": "node dist/cli.js validate"
  },
  "dependencies": {
    "@shared/types": "workspace:*",
    "mssql": "^12.1.0",
    "@azure/cosmos": "^4.7.0",
    "commander": "^12.0.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/mssql": "^9.1.8",
    "typescript": "^5.8.3"
  }
}
