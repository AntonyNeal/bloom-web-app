# Halaxy Sync Worker - Environment Variables
# Copy to .env and fill in values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# Database - Azure SQL
# =============================================================================
SQL_CONNECTION_STRING=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=your-db;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;Authentication=Active Directory Default;

# =============================================================================
# Database - Cosmos DB (Optional - for sync logs)
# =============================================================================
COSMOS_CONNECTION_STRING=

# =============================================================================
# Halaxy API Credentials
# Get these from Halaxy Developer Portal: https://developer.halaxy.com/
# =============================================================================
HALAXY_CLIENT_ID=your-client-id
HALAXY_CLIENT_SECRET=your-client-secret
HALAXY_REFRESH_TOKEN=your-refresh-token
HALAXY_HEALTHCARE_SERVICE_ID=your-healthcare-service-id

# =============================================================================
# Halaxy API URLs (defaults work for Australian instance)
# =============================================================================
HALAXY_API_URL=https://au-api.halaxy.com/api
HALAXY_FHIR_URL=https://au-api.halaxy.com/fhir

# =============================================================================
# Sync Settings
# =============================================================================
# Cron expression for sync schedule (default: every 15 minutes)
SYNC_SCHEDULE=*/15 * * * *

# Timezone for scheduling
TIMEZONE=Australia/Sydney

# Run sync immediately on startup
RUN_ON_STARTUP=true

# =============================================================================
# Health Check
# =============================================================================
HEALTH_PORT=8080

# =============================================================================
# Azure Application Insights (Optional but recommended)
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=
